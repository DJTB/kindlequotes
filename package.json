{
  "name": "kindleQuotes",
  "version": "0.1.0",
  "description": "Parse highlighted passages from Kindle's 'My Clippings' file to JSON",
  "repository": "DJTB/kindlequotes",
  "author": {
    "name": "Duncan Bay",
    "email": "duncan.bay@gmail.com"
  },
  "keywords": [
    "kindle",
    "highlights",
    "clippings",
    "quotes",
    "JSON"
  ],
  "engines": {
    "node": ">=8.5.0"
  },
  "bin": "./bin/kindleQuotes.js",
  "scripts": {
    "start": "node bin/kindleQuotes.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testRegex": ".*\\.test\\.js$",
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/**/__tests__/*.*"
    ]
  },
  "dependencies": {
    "args": "1.3.1"
  },
  "devDependencies": {
    "jest": "21.2.1"
  }
}
