{
  "name": "kindlequotes",
  "version": "0.2.2",
  "description": "Parse highlighted passages from Kindle's 'My Clippings' file to JSON",
  "repository": "DJTB/kindlequotes",
  "author": {
    "name": "Duncan Bay",
    "email": "duncan.bay@gmail.com"
  },
  "keywords": [
    "kindle",
    "highlights",
    "clippings",
    "quotes",
    "JSON"
  ],
  "files": [
    "index.js",
    "src/utils.js",
    "bin/kindleQuotes.js"
  ],
  "engines": {
    "node": ">=8.5.0"
  },
  "main": "index.js",
  "bin": "./bin/kindleQuotes.js",
  "scripts": {
    "precommit": "prettier --write",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "testRegex": ".*\\.test\\.js$",
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/**/__tests__/*.*"
    ]
  },
  "dependencies": {
    "args": "^5.0.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.5",
    "jest": "^24.8.0"
  }
}
